<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="18dp">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtTicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CODE"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textColor="#1A1A1A"
        android:fontFamily="@font/montserrat_bold"
        app:fontFamily="@font/montserrat_bold"
        app:layout_constraintLeft_toRightOf="@+id/imgLogo"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company"
        android:layout_marginStart="12dp"
        android:textSize="12sp"
        android:textColor="#1A1A1A"
        android:textFontWeight="800"
        android:fontFamily="@font/montserrat_regular"
        app:fontFamily="@font/montserrat_regular"
        app:layout_constraintLeft_toRightOf="@+id/imgLogo"
        app:layout_constraintTop_toBottomOf="@+id/txtTicker"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/imgFavourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txtCompanyName"
        android:layout_toEndOf="@id/txtTicker"
        android:background="#00000000"
        android:padding="12dp"
        app:srcCompat="@drawable/path"
        app:layout_constraintLeft_toRightOf="@+id/txtTicker"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/txtCurrentPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:fontFamily="@font/montserrat_bold"
        android:text=""
        android:textColor="#1A1A1A"
        android:textSize="18sp"
        app:fontFamily="@font/montserrat_bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDayDelta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:fontFamily="@font/montserrat_bold"
        android:text=""
        android:textColor="#24B25D"
        android:textSize="14sp"
        app:fontFamily="@font/montserrat_bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtCurrentPrice" />

</androidx.constraintlayout.widget.ConstraintLayout>